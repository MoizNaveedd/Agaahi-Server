{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true, // Skips type checking of declaration files
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": false, // Disables strict mode
    "noImplicitAny": false, // Allows variables to have an implicit "any" type
    "strictNullChecks": false, // Disables strict null checks
    "strictPropertyInitialization": false, // Disables strict property initialization checks
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}