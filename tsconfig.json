{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,  // Helps with compatibility
    "moduleResolution": "node", // Ensures compatibility with Node.js module resolution
    "strict": true,  // Enabling strict mode to catch potential issues early
    "forceConsistentCasingInFileNames": true,  // Ensures consistent casing in file names
    "noFallthroughCasesInSwitch": true  // Adds protection against fallthrough cases in switch statements
  }
}